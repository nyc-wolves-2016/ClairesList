<div class="container">
	<h1><%= @article.title %> - $<%= @article.price %></h1>

	<h2>Description:</h2>
	<p><%= @article.description %></p>

	<h2>Contact information</h2>
	<p><%= @article.user.email %></p>
	<p><%= @article.user.phone %></p>

	<p>Created at:</p>
	<p><%= @article.created_at %></p>
	<p>Last updated:</p>
	<p><%= @article.updated_at %></p>

	<% if @key %>
		<h2>Edit key</h2>
		<p>Use this key to edit your article</p>
		<p> <%= @key %></p>
		<p>Example</p>
		<p><a href="articles/<%= @article.id %>/edit/<%=@key %>">http://localhost:3000/articles/<%= @article.id %>/edit/<%=@key %></a></p>
	<% end %>
</div>
